<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0"
	xmlns:content="http://purl.org/rss/1.0/modules/content/"
	xmlns:wfw="http://wellformedweb.org/CommentAPI/"
	xmlns:dc="http://purl.org/dc/elements/1.1/"
	xmlns:atom="http://www.w3.org/2005/Atom"
	xmlns:sy="http://purl.org/rss/1.0/modules/syndication/"
	>

<channel>
	<title>Sean Clark Hess</title>
	<atom:link href="<%= request.url %>" rel="self" type="application/rss+xml" />
	<link><%= full_url @rss_link %></link>
	<description>Code, Business, Tech, and Life from Sean Clark Hess</description>
	
	<!--Fri, 19 Jun 2009 07:28:22 +0000-->
	<pubDate><%= rss_date Time.now %></pubDate><!--  -->
	<generator>Manual</generator>
	<language>en</language>
	<sy:updatePeriod>hourly</sy:updatePeriod>
	<sy:updateFrequency>1</sy:updateFrequency>

	<% @posts.each do |post| %>
	<item>
		<title><%= post.title %></title>
		<link><%= full_url(post_url(post)) %></link>
		<!--<comments>http://codearchive.seanhess.net/?p=225#comments</comments>-->
		<pubDate><%= rss_date post.created %></pubDate><!-- Fri, 19 Jun 2009 07:27:52 +0000 -->
		<dc:creator>sean</dc:creator>
		
		<% post.tags.each do |t| %>
			<category><![CDATA[<%= t.name %>]]></category>
		<% end %>
		
		<guid isPermaLink="false"><%= post_guid post %></guid>
		<description><![CDATA[<%= post.summary %>]]></description>
		<content:encoded><![CDATA[<%= post.body %>]]></content:encoded>
		<!--<wfw:commentRss>http://codearchive.seanhess.net/?feed=rss2&amp;p=225</wfw:commentRss>-->
	</item>
	<% end %>
	
</channel>
</rss>
