<div class="blog_post">
	<div class="info">
		<span class="tags">
			Tags: <%= post.tags.length %>
			<% post.tags.each do |t| %>
			<a href="/tag/<%= t.name %>"><%= t.name %></a>
			<% end %>
		</span>
		<span class="date"><%= post.created.strftime "%B %d, %Y" %></span>
	</div>
	<div class="content">
		<%= post.body %>
	</div>
</div>